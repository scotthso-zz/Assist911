<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


  <TextView
      android:layout_width="fill_parent"
      android:layout_height="100dp"
      android:text="Times Opened"
      android:textSize="12pt"
      android:gravity="center"
      android:id="@+id/times_opened"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="Tries"
        android:textSize="12pt"
        android:gravity="center"
        android:id="@+id/tries" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="Removed Dialog"
        android:textSize="12pt"
        android:gravity="center"
        android:id="@+id/removed_dialog" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="Removed Audio"
        android:textSize="12pt"
        android:gravity="center"
        android:id="@+id/removed_audio_dialog" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="Reset"
        android:textSize="22dp"

        android:id="@+id/button_reset" />

    <Button
        android:id="@+id/button_showtutorial"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Show Tutorial"/>


</LinearLayout>